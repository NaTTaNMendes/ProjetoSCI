var
  wtemp : Integer;
begin
  try
    wTemp := StrToInt(edFiltro.Text);
    dmDadosPEDSCI.tbNotas.Filtered := False;
    dmDadosPEDSCI.tbNotas.Filter := '(BDCODPROD = ' + edFiltro.Text + ')';
